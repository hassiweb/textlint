{
    "plugins": [],
    "rules": {
        "preset-ja-engineering-paper": true,
        "preset-ja-spacing": true,
        "preset-ja-technical-writing": {
            "ja-no-mixed-period": {
                "periodMark": "．"
            },
            "max-kanji-continuous-len": {
                max: 8,
                allow: [
                    "日本機械学会論文集"
                ]
            },
        },
        "preset-japanese": true,
        "preset-jtf-style": {
            "1.2.1.句点(。)と読点(、)": false,
            "1.2.2.ピリオド(.)とカンマ(,)": false,
            "4.1.3.ピリオド(.)、カンマ(,)": false
        }
    }
}
